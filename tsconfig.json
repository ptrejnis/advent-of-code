{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "outDir": "output",
    "baseUrl": "src",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "moduleResolution": "Node",
    "incremental": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}